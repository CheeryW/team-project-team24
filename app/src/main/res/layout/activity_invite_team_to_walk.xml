<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.teams.InviteTeamToWalkActivity">

    <EditText
        android:id="@+id/et_proposed_day_invite_team_to_walk_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_proposed_day_invite_team_to_walk"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/tv_proposed_day_prompt_invite_team_to_walk_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_proposed_day_prompt_invite_team_to_walk_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proposed_day_invite_team_to_walk"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_proposed_day_invite_team_to_walk_activity" />

    <EditText
        android:id="@+id/et_proposed_time_invite_team_to_walk_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_proposed_time_invite_team_to_walk"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/tv_proposed_time_prompt_invite_team_to_walk_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_proposed_day_prompt_invite_team_to_walk_activity" />

    <TextView
        android:id="@+id/tv_proposed_time_prompt_invite_team_to_walk_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proposed_time_invite_team_to_walk"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_proposed_time_invite_team_to_walk_activity" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:translationZ="5dp"/>

    <Button
        android:id="@+id/btn_send_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_to_team_invite_team_to_walk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_proposed_time_prompt_invite_team_to_walk_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>