<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/enter_gmail_password"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="201dp"
        android:hint="@string/enter_gmail_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height_prompt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/prompt_top_margin"
        android:layout_marginStart="@dimen/prompt_left_margin"/>

    <EditText
        android:id="@+id/et_height_feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_prompt"
        android:layout_alignBottom="@id/tv_prompt"
        android:inputType="number"
        android:hint="@string/num_hint"
        android:importantForAutofill="no"/>

    <TextView
        android:id="@+id/tv_feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feet_units"
        android:layout_marginTop="@dimen/prompt_top_margin"
        android:layout_toEndOf="@id/et_height_feet"
        android:layout_alignBaseline="@id/et_height_feet" />

    <EditText
        android:id="@+id/et_height_remainder_inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_feet"
        android:layout_alignBottom="@id/tv_prompt"
        android:inputType="numberDecimal"
        android:hint="@string/num_hint"
        android:importantForAutofill="no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inch_units"
        android:layout_toEndOf="@id/et_height_remainder_inches"
        android:layout_alignBaseline="@id/et_height_remainder_inches" />
    <Button
        android:id="@+id/btn_height_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_btn_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_prompt" />

    <Button
        android:id="@+id/no_login_btn"
        android:layout_width="207dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="315dp"
        android:text="@string/no_login" />

    <EditText
        android:id="@+id/enter_gmail_address"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="267dp"
        android:hint="@string/enter_gmail_address"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:text="@string/login" />

</RelativeLayout>